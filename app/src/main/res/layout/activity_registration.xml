<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".registration.Registration">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow_left"
        android:id="@+id/back"
        android:layout_margin="20dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/burger"
        android:id="@+id/top_icon"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/corner_white">

        <View
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:background="@drawable/button_blue"
            android:backgroundTint="@color/grey2"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:id="@+id/topbar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textSize="16dp"
                android:id="@+id/txt_create_account"
                android:fontFamily="@font/dmsanssemibold"
                android:textColor="@color/blue"/>
            <Space
                android:layout_width="50dp"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="16dp"
                android:id="@+id/txt_login"
                android:fontFamily="@font/dmsanssemibold"
                android:textColor="@color/grey"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/topbar"
            android:id="@+id/topbar2">
            <View
                android:layout_width="60dp"
                android:layout_height="3dp"
                android:id="@+id/view_create_account"
                android:background="@drawable/button_blue"
                android:backgroundTint="@color/pink"
                android:layout_marginLeft="30dp"
                android:layout_centerHorizontal="true"/>
            <Space
                android:layout_width="50dp"
                android:layout_height="1dp"/>
            <View
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:id="@+id/view_login"
                android:background="@drawable/button_blue"
                android:backgroundTint="@color/pink"
                android:layout_marginLeft="35dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topbar2"
            android:layout_marginTop="10dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_create_account"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dmsanssemibold"
                        android:textSize="14dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="5dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Enter your full name"
                        android:textColorHint="#9CA3AF"
                        android:textSize="12dp"
                        android:inputType="textCapWords"
                        android:id="@+id/edt_fullname"
                        android:fontFamily="@font/dmsansregular"
                        android:background="@drawable/edittext"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email address"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dmsanssemibold"
                        android:textSize="14dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Eg namaemail@emailkamu.com"
                        android:textColorHint="#9CA3AF"
                        android:textSize="12dp"
                        android:id="@+id/edt_email1"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/dmsansregular"
                        android:background="@drawable/edittext"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dmsanssemibold"
                        android:textSize="14dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="******"
                        android:textColorHint="#9CA3AF"
                        android:textSize="12dp"
                        android:id="@+id/edt_password1"
                        android:inputType="textPassword"
                        android:fontFamily="@font/dmsansregular"
                        android:background="@drawable/edittext"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dmsanssemibold"
                        android:textSize="14dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Enter your phone number"
                        android:textColorHint="#9CA3AF"
                        android:textSize="12dp"
                        android:inputType="number"
                        android:id="@+id/edt_phone"
                        android:fontFamily="@font/dmsansregular"
                        android:background="@drawable/edittext"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preferred Delivery Address"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dmsanssemibold"
                        android:textSize="14dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Eg Wuse, Aminu Kano, Abuja"
                        android:textColorHint="#9CA3AF"
                        android:textSize="12dp"
                        android:inputType="textPostalAddress"
                        android:id="@+id/edt_address"
                        android:fontFamily="@font/dmsansregular"
                        android:background="@drawable/edittext"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="40dp"
                        android:layout_marginTop="30dp">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Continue"
                            android:textAllCaps="false"
                            android:textColor="#9CA3AF"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:id="@+id/btn_continue"
                            android:background="@drawable/button_grey"
                            android:fontFamily="@font/dmsansbold"/>
                        <Space
                            android:layout_width="1dp"
                            android:layout_height="10dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/signin_google"
                            android:background="@drawable/button_grey">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/google"
                                android:layout_marginLeft="40dp"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sign up with Google"
                                android:layout_centerInParent="true"
                                android:textColor="@color/black"
                                android:fontFamily="@font/dmsansbold"/>

<!--                            <Button-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="60dp"-->
<!--                                android:text="Sign up with Google"-->
<!--                                android:textAllCaps="false"-->
<!--                                android:id="@+id/signin_google"-->
<!--                                android:textColor="@color/black"-->
<!--                                android:layout_marginBottom="10dp"-->
<!--                                android:background="@drawable/button_grey"-->
<!--                                android:fontFamily="@font/dmsansbold"/>-->
                        </RelativeLayout>



                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_login"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dmsanssemibold"
                        android:textSize="14dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="5dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Eg namaemail@emailkamu.com"
                        android:textColorHint="#9CA3AF"
                        android:textSize="12dp"
                        android:id="@+id/login_email"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/dmsansregular"
                        android:background="@drawable/edittext"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/black"
                        android:fontFamily="@font/dmsanssemibold"
                        android:textSize="14dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="******"
                        android:textColorHint="#9CA3AF"
                        android:textSize="12dp"
                        android:id="@+id/login_password"
                        android:inputType="textPassword"
                        android:fontFamily="@font/dmsansregular"
                        android:background="@drawable/edittext"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password?"
                        android:textColor="#5C5C5C"
                        android:fontFamily="@font/dmsanssemibold"
                        android:textSize="14dp"
                        android:paddingRight="10dp"
                        android:id="@+id/forgot_password"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="40dp"
                        android:layout_marginTop="30dp">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Login"
                            android:textAllCaps="false"
                            android:textColor="#9CA3AF"
                            android:id="@+id/btn_login"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/button_grey"
                            android:fontFamily="@font/dmsansbold"/>
                        <Space
                            android:layout_width="1dp"
                            android:layout_height="10dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/btn_login_google"
                            android:background="@drawable/button_grey">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/google"
                                android:layout_marginLeft="40dp"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Login with Google"
                                android:layout_centerInParent="true"
                                android:textColor="@color/black"
                                android:fontFamily="@font/dmsansbold"/>

                            <!--                            <Button-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="60dp"-->
                            <!--                                android:text="Sign up with Google"-->
                            <!--                                android:textAllCaps="false"-->
                            <!--                                android:id="@+id/signin_google"-->
                            <!--                                android:textColor="@color/black"-->
                            <!--                                android:layout_marginBottom="10dp"-->
                            <!--                                android:background="@drawable/button_grey"-->
                            <!--                                android:fontFamily="@font/dmsansbold"/>-->
                        </RelativeLayout>
<!--                        <Button-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="50dp"-->
<!--                            android:text="Login with Google"-->
<!--                            android:textAllCaps="false"-->
<!--                            android:textColor="@color/black"-->
<!--                            android:id="@+id/btn_login_google"-->
<!--                            android:layout_marginLeft="30dp"-->
<!--                            android:layout_marginRight="30dp"-->
<!--                            android:layout_marginBottom="10dp"-->
<!--                            android:background="@drawable/button_grey"-->
<!--                            android:fontFamily="@font/dmsansbold"/>-->



                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>



    </RelativeLayout>


</RelativeLayout>